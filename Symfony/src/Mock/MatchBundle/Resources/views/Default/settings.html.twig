{% extends "MockMobileBundle::layout.html.twig" %}

{% block content %}
<form action="/matchup/settings" method="post">
	<div class="control-group">
		<label class="control-label" for="username">Season</label>
    	<div class="controls">
		   <select data-iconpos="left" name="league" id="week" >
				{% for league in leagues %}
					{% if league.league_key == selected_league %}
						<option selected value="{{ league.league_key }}">{{ league.season }}</option>
					{% else %}
						<option value="{{ league.league_key }}">{{ league.season }}</option>
					{% endif %}
				{% endfor %}
		   </select>
		</div>
	</div>
	<button data-ajax="false" type="submit">Submit</button>
</form>
{% endblock %}