{% extends "MockMobileBundle::layout.html.twig" %}


{% block content %}
<div>
{{ message }}
</div>
<h2 class="title">Login</h2>
<form class="form-horizontal" action="/signin" data-ajax="false" method="post">
	<div class="control-group">
		<label class="control-label" for="username">Yahoo Email Address:</label>
    	<div class="controls">
			<input type="text" id="username" required="required" name="openid_identifier" value="" />
		</div>
	</div>

	<input type="hidden" name="_target_path" value="/login" />
   	<button class="btn btn-primary btn-large" type="submit">login</button>
	<a href="/signup">Signup for MockMatchup</a>
</form>
{% endblock %}
